---
import BaseHead from "../components/BaseHead.astro";

export interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt: string;
}

const { title, description, image, imageAlt } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      imageAlt={imageAlt}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
