<style>
  #chart-container {
    width: 100%;
  }

  .section {
    position: relative;
    margin: 1rem 0;
    display: flex;
    flex-direction: column;
    border-radius: 1rem;
    border: 1px dashed white;
    padding: 1.5rem;
  }

  .section-title {
    font-size: 0.85rem;
    position: absolute;
    top: -0.75rem;
    background-color: var(--color-zinc-800);
    padding: 0 0.25rem;
    border-radius: 0.25rem;
  }

  .section-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .subsection {
    position: relative;
    border: 1px dashed;
    border-color: white;
    border-radius: 6px;
    padding: 1rem;
  }

  .subsection-title {
    font-size: 0.8rem;
    position: absolute;
    top: -0.65rem;
    background-color: var(--color-zinc-800);
    padding: 0 0.25rem;
    border-radius: 0.25rem;
  }

  .node-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    align-items: center;
  }

  .node {
    display: flex;
    flex-direction: column;
    align-items: center;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    min-width: 30px;
    width: 40px;
    cursor: default;
  }

  .node:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px var(--shadow-color);
  }

  .node-label {
    font-size: 0.8rem;
    text-align: center;
    height: 0;
    opacity: 0;
  }

  .arrow {
    font-size: 1.5rem;
    color: var(--line-color);
    display: inline-flex;
    align-items: center;
  }

  .section-connector {
    display: flex;
    justify-content: center;
    margin: 0.5rem 0;
  }

  .connector-line {
    width: 2px;
    height: 30px;
    background-color: var(--line-color);
  }

  .connector-arrow {
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-top: 10px solid var(--line-color);
  }

  @media (max-width: 768px) {
    .tech-chart {
      min-width: 100%;
    }
  }
</style>
