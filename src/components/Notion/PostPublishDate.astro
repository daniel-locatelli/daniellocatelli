---
import { type Page } from "../../lib/notion-interfaces.ts";
import { getDateStr } from "../../lib/blog-helpers.ts";

export interface Props {
  post: Page;
}

const { post } = Astro.props;
---

<div class="post-date">
  {post.DateStart ? getDateStr(post.DateStart) : ""}
</div>

<style>
  .post-date {
    padding: 0 0 0.3rem;
    font-size: 0.9rem;
  }
</style>
