---
import { type Page } from "../../lib/notion-interfaces.ts";

export interface Props {
  post: Page;
}

const { post } = Astro.props;
---

<div class="post-excerpt">
  <p>{post.Description_en ? post.Description_en : ""}</p>
</div>

<style>
  .post-excerpt {
    padding: 0.2rem 0;
    font-size: 1rem;
  }

  .post-excerpt p {
    margin: 0;
  }
</style>
