---
import { type RichText } from "../../../../lib/notion-interfaces.ts";

export interface Props {
  richText: RichText;
}

const { richText } = Astro.props;
---

{
  /* prettier-ignore */
  richText.Href && !richText.Mention ? (
    <a href={richText.Href} class="underline sm:hover:text-green-300 break-word"><slot /></a>
  ) : (
    <slot />
  )
}
